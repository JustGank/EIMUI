<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chat_inputbar_bg"
                android:gravity="center_vertical|left"
                android:imeActionLabel="send"
                android:imeOptions="actionSend"
                android:maxLength="200"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:singleLine="true"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/press_talk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chat_white_press_talk"
                android:gravity="center"
                android:text="@string/chat_press_talk"
                android:textSize="22dp"
                android:visibility="gone" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/right_img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4b5360" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/more_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:visibility="gone" />


</LinearLayout>